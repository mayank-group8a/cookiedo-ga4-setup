  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css">
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.css">
  
<style>
  .upsell-carousel-wrapper{
  	padding: 35px;
    background:#FFF4F8;
    width:100%;
    overflow:hidden;
  }
  .upsell-carousel{
  	width:100%;
    display:block;
  }
  .upsell-product-grid{
  	width:300px;
    max-width:100%;
    padding:0px 30px;
    min-width:200px;
  }
  .upsell-container{
  	width:100%;
    display:block;
  }
  .upsell-container .slick-arrow:before{
  	display:none;
  }
  .upsell-product-meta h4{
  	margin-top:17px;
    font-size:15px;
  }
  .upsell-price{
    font-weight: 700;
    font-size: 15px;
    margin-bottom: 15px;
}
  .ad_to_cart{
    padding: 8px 10px;
    font-size: 12px;
}
  .variant_dropdown{
    width: 100%;
    height: 28px;
    padding: 2px 8px;
    font-size: 12px;
    border: 1px solid #ddd;
    margin-bottom: 10px;
}
  @media screen and (min-width: 481px){
    .upsell-container{display:none;}
  }
  .upsell-product-image{
    width:100%;
      display:block;
    }
  .upsell-form-footer .mobile-btn,
  .upsell-form-footer .upsell-price{display:none; } 
  
  @media screen and (max-width: 768px){
    
    .upsell-product-meta h4{
      font-size:13px;
    }
    .upsell-price{
      font-size: 13px;
    }

    .upsell-product-meta .upsell-price,
    .ad_to_cart{display:none; margin-top:0; margin-bottom:0px; }
    .upsell-form-footer{display:flex; align-items:center;}
    .upsell-form-footer .mobile-btn,
  	.upsell-form-footer .upsell-price{display:block; } 
    .ad_to_cart{ margin-left:auto; }
    .upsell-product-grid{
      max-width: 80vw;
      width:100%;
      padding:0px 5px;
      
    }
    .upsell-carousel-wrapper{
      background: none;
     margin-left: -10px;
    margin-right: -10px;
      width: auto;
      max-width: initial;
      padding-left: 0;
      padding-top:10px;
      padding-right: 0;
    }
    .cart table{margin-bottom:0px;}
    .upsell-carousel-wrapper .slick-arrow{
    	display:none;
    }
    .free-shipping-container{
    	padding: 0px 30px 10px 30px;
      	display:block;
      	width:100%;
    }
    .upsell-inner-product-grid{
    	display:flex;
      	flex-wrap:wrap;
      	padding: 15px;
    	background:#FFF4F8;
      
    }
    .upsell-inner-product-grid .upsell-product-image{
    	width:90px;
    }
    .upsell-inner-product-grid .upsell-product-meta{
    	width: calc(100% - 90px);
      	padding-left: 15px;
    }
    
  }
</style>

{% assign upsell_collection = collections.upsell %}
{% if upsell_collection.products.size > 0 %}
<div class="upsell-carousel-wrapper">
  <div class="free-shipping-container">
  	{% include "free-shipping-note" %}
  </div>  	
  <div class="upsell-container">
    <div class="upsell-carousel">
    	{% for upsell in upsell_collection.products %}
      		
      		{% assign cart_enable = false %}
      		{% for item in cart.items %}
      			{% if item.product.id == upsell.id %}
      				{% assign cart_enable = true %}
      			{% endif %}
      		{% endfor %}
      
      		{% if upsell.available == false or cart_enable == true %}
      			{% continue %}
      		{% endif %}
      
      		<div class="upsell-product-grid">
              <div class="upsell-inner-product-grid">
              <div class="upsell-product-image">
                <a class="image-wrapper" href="{{upsell.url}}">
                	<img src="{{upsell.featured_image.src | img_url: "400x" }}" alt="{{upsell.title | escape }}">
                </a>
              </div>
              <div class="upsell-product-meta">
                <a href="{{upsell.url}}">
                  <h4>{{upsell.title}}</h4>
                </a>
                <div class="upsell-price">{{upsell.price | money | remove: ".00"}}</div>
                
                <div class="add-upsell-cart">
                	<div class="form">
                  	  <select class="variant_dropdown" name="id" style="{% if upsell.variants.size == 1 %}display:none;{% endif %}">
                        {% for variant in upsell.variants %}
                          <option {% if variant == upsell.selected_or_first_available_variant %} selected="selected" {% endif %}  value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money }}</option>
                        {% endfor %}
                      </select>
                  		<input type="hidden" value="1" name="quantity" />
                      <div class="upsell-form-footer">
                      <div class="upsell-price">{{upsell.price | money | remove: ".00"}}</div> <input class="btn ad_to_cart" type="button" value="Add to cart" var-id="{{upsell.selected_or_first_available_variant.id}}" product-title="{{upsell.title}}" first-var="{{upsell.selected_or_first_available_variant.title}}" data-vendor="{{ upsell.vendor }}" var-price="{{ upsell.selected_or_first_available_variant.price | money }}"/>
                        <input class="btn ad_to_cart mobile-btn" type="button" value="Add" var-id="{{upsell.selected_or_first_available_variant.id}}" product-title="{{upsell.title}}" first-var="{{upsell.selected_or_first_available_variant.title}}" data-vendor="{{ upsell.vendor }}" var-price="{{ upsell.selected_or_first_available_variant.price | money }}"/>
                      </div>
                  </div>
                </div>
                
              </div>
      		</div>
      		</div>
      	{% endfor %}
    </div>
  </div>
</div>







  <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.js" defer></script>
  <script>
    $(document).ready(function(){
      	
      
        $('.upsell-container').show();
      
      
      $('.upsell-carousel').slick({
        dots: false,
        prevArrow: '<div class="slick-prev"><img src="{{"arrow-2.png" | asset_url }}" alt="left" /></div>',
    	nextArrow: '<div class="slick-next"><img src="{{"arrow-1.png" | asset_url }}" alt="right" /></div>',
        centerMode: false,
        slidesToShow: 3,
        slidesToScroll: 1,
        responsive: [
          {
            breakpoint: 1200,
            settings: {
              arrows: true,
              centerMode: false,
              centerPadding: '0px',
              slidesToShow: 3
            }
          },
          {
            breakpoint: 1023,
            settings: {
              arrows: true,
              centerMode: false,
              centerPadding: '0px',
              slidesToShow: 2
            }
          },
          {
            breakpoint: 769,
            settings: {
              arrows: false,
              centerMode: true,
              centerPadding: '40px',
              slidesToShow: 1
            }
          }
        ]
      });
      
      
      $(document).on('click','.ad_to_cart',function(){ 
         $(this).val('Loading...');
        var variant_id = $(this).parents('.add-upsell-cart').find('.variant_dropdown').val();
        $.ajax({
          type: 'POST',
          url: '/cart/add.js',
          data: {
            quantity: 1,
            id: variant_id
          },
          dataType: 'json', 
          success: function (data) { 
            location.reload();
          } 
        });
      }); 
          
     
    });

</script>
{% endif %}