<div class="grid__item small--text-center">
        <p class="text-center">Sorry, there are no products in this collection</p>
      </div>
{% endif %}
              
 </div>
 </div>


<script>
  jQuery(document).ready(function(){
    jQuery("#wrapper-container .div-container").each(function(){
      
      jQuery(this).find('.whole-wrapper').each(function(){
        var grid_counts = jQuery(this).find('.grid__item').length;
      	if(grid_counts == 0){
        	jQuery(this).remove();
        }else if(grid_counts == 1){
        	jQuery(this).css({'width':'25%'});	
        }else if(grid_counts == 2){
        	jQuery(this).css({'width':'50%'});	
        }else if(grid_counts == 3){
        	jQuery(this).css({'width':'75%'});	
        }else if(grid_counts == 4){
        	jQuery(this).css({'width':'100%'});	
        }
      });
      
      //var sec_count = jQuery(this).find('.whole-wrapper').length;
     
      
      jQuery(this).find('.whole-wrapper').each(function(){
      	var grid_count = jQuery(this).find('.grid__item').length;
        if(grid_count == 0){
        	jQuery(this).hide();
        }else{
          if(grid_count == 1){
            jQuery(this).find('.grid__item').css({'width':'100%'});
          }else if(grid_count == 2){
            jQuery(this).find('.grid__item').css({'width':'50%'});
          }else if(grid_count == 3){
            jQuery(this).find('.grid__item').css({'width':'33.33%'});
          }else if(grid_count == 4){
            jQuery(this).find('.grid__item').css({'width':'25%'});
          }
        	console.log(grid_count);
        }
        
        
      });
      
      
    });
  });
</script>
