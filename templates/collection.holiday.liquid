    position: relative;
    margin: 0px 0px 0px 0px;
    position: absolute;
    top: 0px;
    right:10px;
    left: 10px;
}
  .highlight-top:after{
  	content:"";
    height:2px;
    position:absolute;
    top:50%;
    transform: translateY(-50%);
    left:0;
    width:100%;
    z-index:1;
  }
  .highlight-top h3{

    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    background: #fff;
    padding: 0px 10px;
