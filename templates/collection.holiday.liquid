          {% include 'cookiedoSpecial' with collection.handle %}
  		</div>
    	 {% if tagCount == 4 %}
            </div>
            </div>
            <div class="div-container">
            <div class="whole-wrapper">
               {% assign tagCount = tagCount | minus: 4 %}
          {% endif %}
      {% endif %}
    {% endfor %}
              
              
      {% comment %}      {% if forloop.last == true %}
             </div>
            </div>
            <div class="div-container">
            <div class="whole-wrapper">
             {% assign tagCount = 0 %}
          {% endif %} {% endcomment %}
              
  {% endfor %}
  </div>
{% endfor %}
              
              {% if collection.handle contains 'valentines'  %}
    		{% assign product_grid = 3 %} 
    {% elsif collection.handle contains 'holiday-favoritess'  %}
