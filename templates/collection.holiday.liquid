  {% elsif tag == 'FOR ALL THE COOKIE MONSTERS!' %}
  	{% assign color_code = '#d0e355' %}
  {% elsif tag == 'Gifts for Baking Lovers' %}
  	{% assign color_code = '#6cbae9' %}
  {% else %}
  	{% assign color_code = '#ed3381' %}
  {% endif %}
  
  <div class="whole-wrapper">
  <div class="highlight-top">
    
  <h3 style="color:{{color_code}}">{{ tag }}</h3>
    <span class="divider" style="background:{{color_code}}"></span>
  </div>
    
  {% for product in collection.products %}
    {% for product_tag in product.tags %}
      {% capture current_tag2 %}/{{ product_tag }}/{% endcapture %}
      {% if current_tag contains current_tag2 %}
