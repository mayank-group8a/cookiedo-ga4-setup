  {% if section.settings.section_showHide == 'show' %}
	
      <div class="row-13 w-row">
      {% for block in section.blocks %}
        {% if block.settings.enable_image %}
          <div class="w-col w-col-12">
            {% if block.settings.button_link != blank %}
              <a href="{{ block.settings.button_link }}">
            {% endif %}
                <img src="{{ block.settings.image | img_url: '500x500' }}" alt="{{ block.settings.image.alt | escape }}">
            {% if block.settings.button_link != blank %}
            	</a>
            {% endif %}
           </div>
        {% endif %}
      {% endfor %}
	  </div>

  {% endif %}

{% schema %}
  {
    "name": "Featured images",
    "class": "class-schedules",
    "settings": [
	  
      {
        "type": "select",
        "id": "section_showHide",
        "label": "Show/Hide",
        "default": "show",
        "options": [
          {
            "value": "hide",
            "label": "Hide"
          },
          {
            "value": "show",
            "label": "Show"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "text_block",
        "name": "Featured Image",
        "settings": [
          {
            "type": "checkbox",
            "id": "enable_image",
            "label": "Show image",
            "default": true
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Image link"
          }
        ]
      }
    ]
  }
{% endschema %}
