{% for block in section.blocks %}
<div class="div-container">
      <div class="div flex">
        <div class="div-50">
          <div class="about-image home" style="background-image:url('{{ block.settings.image | img_url: '1024x1024' }}');"></div>
        </div>
        <div class="div-50 center">
           <a href="{{ block.settings.button_link }}" class="link-block w-inline-block">
            <div class="div-50 colored-box">
              <div class="colored-box-1">
                <div class="colored-box-2">
                  
                  {% if block.settings.title != blank %}
                    <h2 class="box-heading-bold curly">{{ block.settings.title | escape }}</h2>
                  {% endif %}
                  {% if block.settings.button_label != blank %}
                   <h2 class="box-heading-bold">{{ block.settings.button_label | escape }}</h2>
                  {% endif %}
                </div>
              </div>
            </div>
          </a>
        </div>
      </div>
      <div class="divider-line"></div>
    </div>
{% endfor %}




{% for product in collection.products %}
	  {% if template != 'index' %}
       <img src="{{ product.featured_image.src | img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}">
     {% endif %}
{% endfor %}

{% schema %}
  {
    "name": "Home Kristen Image",
    "class": "index-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Home Kristen Image"
      },
      {
        "type": "select",
        "id": "align_text",
        "label": "Text alignment",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Centered"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "text_block",
        "name": "Column",
        "settings": [
          {
            "type": "checkbox",
            "id": "enable_image",
            "label": "Show image",
            "default": true
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Add a title or tagline"
          },
          
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Home Kristen Image",
        "category": "Text",
        "blocks": [
          {
            "type": "text_block"
          },
          {
            "type": "text_block"
          },
          {
            "type": "text_block"
          }
        ]
      }
    ]
  }
{% endschema %}
